<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/uikit@3.5.3/dist/css/uikit.min.css" />
        {% endblock %}
    </head>
    <body>
        {% block nav %}
        <nav class="uk-navbar-container">
            <div class="uk-navbar-center">
                <ul class="uk-navbar-nav">
                    <li>
                        <a href="{{ path('home')}} "  >Accueil</a>
                    </li>
                    <li>
                        <a href="{{ path('stagiaire_index')}} "  >Stagiaires</a>
                    </li>
                    <li>
                        <a href="{{ path('session_index')}} "  >Formations</a>
                    </li>
                    <li>
                        <a href="{{ path('blocmodule_index')}} " >Modules</a>
                    </li>
                    <li>
                        <a href="{{ path('categorie_index')}} "  >Cat√©gories</a>
                    </li>
                    <li>
                        <a href="{{ path('programme_index')}} "  >Faire le programme de la formation</a>
                    </li>
                </ul>
            </div>
        </nav>
        {% endblock %}
        {% for message in app.flashes ('error') %}
            <div class="uk-alert-danger">
                <a class="uk-alert-close" uk-close></a>
                {{message}}
            </div>            
        {% endfor %}
        {% for message in app.flashes ('success') %}
            <div class="uk-alert-success">
                <a class="uk-alert-close" uk-close></a>
                {{message}}
            </div>
        {% endfor %}
        {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/uikit@3.5.3/dist/js/uikit.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/uikit@3.5.3/dist/js/uikit-icons.min.js"></script>
            <script src="https://code.jquery.com/jquery-3.5.1.min.js"
                integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
                crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
