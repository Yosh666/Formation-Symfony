{% extends 'base.html.twig' %}

{% block title %}Stagiaire{% endblock %}

{% block body %}
    <h1>Stagiaire</h1>

    <table class="table">
        <tbody>
            
            <tr>
                <th>Nom</th>
                <td>{{ stagiaire.name }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ stagiaire.firstname }}</td>
            </tr>
            <tr>
                <th>Date de naissance</th>
                <td>{{ stagiaire.birthday ? stagiaire.birthday|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ stagiaire.mail }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ stagiaire.phone }}</td>
            </tr>
        </tbody>
    </table>

    <button><a href="{{ path('stagiaire_index') }}">retour à la liste</a></button>

    <button><a href="{{ path('stagiaire_edit', {'id': stagiaire.id}) }}">Editer</a></button>

    {{ include('stagiaire/_delete_form.html.twig') }}
{% endblock %}
